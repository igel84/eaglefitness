<footer>
	<div class="logo">
		<%= link_to image_tag('/images/icons/logo.png'), '/' %>
	</div>
	<div class="bmenu">
		<ul>
			<% @pages = Page.all(:conditions => "is_menu_element = '1'") %>
			<% for page in @pages do %>
				<li><%= link_to page.title, "/#{I18n.locale}/pages/#{page.id}" %></li>
			<% end %>
		</ul>
	</div>
	<div class="social">
			<a href="" class="vk"></a>
			<a href="" class="fb"></a>
		</div>
		<div class="copy">
			<p><a href="http://eaglefitness.cz">www.eaglefitness.cz</a> <%= t('copyright') %></p>
		</div>
	</div>
</footer>