<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :is_main %><br />
    <%= f.select :is_main, [['With tab', 'true'], ['Without tab', 'false'], ['As article', 'article']] %>
  </div>
  <div class="field">
    <%= f.label :is_special %>
    <%= f.check_box :is_special %>
  </div>
  <div class="field">
    <%= f.label :is_menu_element %>
    <%= f.check_box :is_menu_element %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :preview %><br>
    <%= f.text_area :preview, :rows => '5' %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => '40', :cols => '100' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>